pipeline{
    agent any
    
    environment{
        PATH = "/opt/maven3/bin:$PATH"
    }
    stages{
        stage("Git Checkout"){
            steps{
                git credentialsId: 'saikumar', url: 'https://github.com/knowledge27295/myweb.git'
            }
        }
        stage("Maven Build"){
            steps{
                sh "mvn clean package"
                
                sh "mv target/*.war target/myweb.war"
                
            }
        }
        stage("deploy-dev"){
            steps{
                sshagent(['tomcat-new']) {
                sh """
                    scp -o StrictHostKeyChecking=no target/myweb.war  ec2-user@172.31.35.208:/ubuntu//opt/tomcat9/webapps/
                    
                    ssh ec2-user@172.31.35.208 /ubuntu//opt/tomcat9/bin/shutdown.sh
                    
                    ssh ec2-user@172.31.35.208 /ubuntu//opt/tomcat9/bin/startup.sh
                
                """
            }
            
            }
        }
    }
}
